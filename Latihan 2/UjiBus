package Enkapsulasi;

/**
 *
 * @author User
 */
public class ujiBus {
    public static void main(String[] nisa) {
        //Membuat objek busBesar dari class Bus
        Bus2 busBesar = new Bus2 (40);
        busBesar.cetak();
        
        //Menambah penumpang pada busBesar
        busBesar.addPenumpang(15);//Menambahkan 15 penumpang 
        //Memanggil method cetak pada kelas Bus
        busBesar.cetak();
        
        //Menambah penumpang pada busBesar
        busBesar.addPenumpang(5);//Menambahkan 5 penumpang 
        busBesar.cetak();
        
        //Menambahkan jumlah penumpang pada busMini
        busBesar.addPenumpang(26);//Menambah 26 penumpang 
        busBesar.cetak();
       
    }
}
