package Enkapsulasi;

/**
 *
 * @author User
 */
public class Bola {
    private double jarijari;
    
    public void setJariJari(double Jari2){
        this.jarijari = Jari2;
    }
    public void showDiameter(){
        double bola = this.jarijari * 2;
    System.out.println("Diameter bola        : "+ bola + " cm");
  }
    
    public void showLuasPermukaan(){
        double bola = 4 * Math.PI * Math.pow(this.jarijari, 2);
    System.out.println("Luas permukaan bola  : "+ bola + " cm kuadrat");
  }
    public void showVolume(){
        double bola = (4/3) * Math.PI * Math.pow(this.jarijari, 3);
    System.out.println("Volume bola          : "+ bola + " cm kubik");
  }
    }

