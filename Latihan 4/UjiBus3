public class UjiBus3 {
 public static void main(String[] nisa) {
    Bus3 Bus= new Bus3(5);
        Bus.getPenumpang(17);
        Bus.getPenumpang(24);
        Bus.cetakpenumpang();
    //Panambahan penumpang
    Bus.addPenumpang (2);//tambah 2 penumpang
    Bus.cetakpenumpang();
    
    //Penambahan penumpang
    Bus.addPenumpang(1);//tambah 1 penumpang
    Bus.cetakpenumpang();
    
    //Penambahan penumpang
    Bus.addPenumpang(2);//tambah 2 penumpang
    Bus.cetakpenumpang();
    
    //Penambahan penumpang
    Bus.addPenumpang(2);//tambah 2 penumpang
    Bus.cetakpenumpang();
 }
 
    
}
